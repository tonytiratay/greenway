<%= form_for(@activite) do |f| %>
  <% if @activite.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@activite.errors.count, "error") %> Activité non sauvegardée:</h2>

      <ul>
      <% @activite.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit 'Créer', class: 'button small round success', style: 'color:#fff; float:right;  margin-top:15px; margin-left:10px;'%>
    <%= link_to 'Retour', activites_path, class: "button small round success", style: "float:right; margin-top:15px;" %>
  </div>
<div class="row" style="clear: both;">
  <div class="large-6 small-12 columns">
  <div class="field">
    <%= f.label :titre %><br>
    <%= f.text_field :titre %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label "Type d'activité" %><br>
    <%= f.text_field :typeactivite %>
  </div>
  <div class="field">
    <%= f.label :prix %><br>
    <%= f.text_field :prix %>
  </div>
  </div>
  <div class="large-6 small-12 columns">
  <div class="field">
  <div class="field">
    <%= f.label :pays %><br>
    <%= f.text_field :pays %>
  </div>
  <div class="field">
    <%= f.label :adresse %><br>
    <%= f.text_field :adresse %>
  </div>
  <div class="field">
    <%= f.label "Date de debut (jj/mm/aa)" %><br>
    <%= f.date_field :datedebut %>
  </div>
  <div class="field">
    <%= f.label "Date de fin (jj/mm/aa)" %><br>
    <%= f.date_field :datefin %>
  </div>
  </div>

</div>
<% end %>
